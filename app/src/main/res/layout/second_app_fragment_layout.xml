<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:layout_weight="30">

        <TextView
            android:id="@+id/app_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:background="#F95F0F"
            android:gravity="center"
            android:text="appname"
            android:textColor="@color/com_facebook_blue"
            android:textSize="40sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="30">

            <TextView
                android:id="@+id/app_2_q_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="30"
                android:text="1. this is question one about the second app." />

            <EditText
                android:id="@+id/app_2_a_1"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="30">


            <TextView
                android:id="@+id/app_2_q_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="2. this is question one about the second app."
                android:layout_weight="30"/>

            <EditText
                android:id="@+id/app_2_a_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="30">

            <TextView
                android:id="@+id/app_2_q_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="3. this is question one about the second app."
                android:layout_weight="30"/>

            <EditText
                android:id="@+id/app_2_a_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:id="@+id/go_to_next_fragment"/>
</LinearLayout>