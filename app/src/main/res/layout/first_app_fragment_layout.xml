<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--android:background="#000000"-->

    <TextView
        android:id="@+id/app_name"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="#FF1D4D"
        android:gravity="bottom"
        android:paddingBottom="20dp"
        android:paddingLeft="20dp"
        android:text="appname"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="30"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_1_q_1"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="1.1 Why did you choose this app?"
            android:textColor="#FF1D4D" />

        <EditText
            android:id="@+id/app_1_a_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#FFFFFF"
            android:textColorHint="#878f44" />


        <TextView
            android:id="@+id/app_1_q_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:layout_weight="30"
            android:text="1.2 What is the best feature about it?"
            android:textColor="#FF1D4D" />

        <EditText
            android:id="@+id/app_1_a_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:textColor="#FFFFFF" />


        <TextView
            android:id="@+id/app_1_q_3"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:text="1.3 What would you like to see improved?"
            android:textColor="#FF1D4D" />

        <EditText
            android:id="@+id/app_1_a_3"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <Button
        android:id="@+id/go_to_next_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FF1D4D"
        android:text="continue"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="15sp" />

</LinearLayout>